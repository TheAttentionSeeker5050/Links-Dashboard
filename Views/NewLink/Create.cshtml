@model WebAppProject3.Models.LinkModel

@{
    ViewData["Title"] = "Create Link";
}

<div class="">
    <h1 class="h1 text-center my-4">_LaunchPad</h1>
    <h2 class="h2 text-center my-4">Edit Category</h2>

    @* make a form that posts to the controller to create link *@
    <form method="post" class="flex-column d-flex gap-4 mx-auto my-5" id="formSection" asp-action="CreateSubmit" asp-controller="Link">

        @* the fields are: LinkName, LinkHref, LinkLabel, LinkCategory, IsPinned, hidden LinkId *@
        <div class="d-flex flex-row mx-auto gap-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        </div>
    </form>

</div>