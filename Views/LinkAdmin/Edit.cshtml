@model WebAppProject3.Models.LinkModel

@{
    ViewData["Title"] = "Edit Link";
}

<div class="">
    <h1 class="h1 text-center my-4">_LaunchPad</h1>
    <h2 class="h2 text-center my-4">Edit Link </h2>

    @* make a form that posts to the controller to edit link *@
    <form asp-controller="LinkAdmin" asp-action="EditSubmit" asp-route-linkId="@Model.LinkId" method="post" asp-route-categoryId="@Model.LinkCategory.CategoryId">
        <p>Enter the data below</p>

        @* the fields are: FaviconSrc, LinkLabel, LinkHref, LinkName, IsPinned, greyed out LinkCategory *@
        @* greyed out LinkCategory *@
        <div class="d-flex flex-row gap-3">
            <label for="LinkCategory">Link Category</label>
            <input type="text" name="LinkCategory" id="LinkCategory" class="form-control" value="@Model.LinkCategory.CategoryName" disabled />
            <span asp-validation-for="LinkCategory"></span>
        </div>

        <div class="d-flex flex-row gap-3">
            <label for="FaviconSrc">Favicon Source</label>
            <input type="text" name="FaviconSrc" id="FaviconSrc" class="form-control" value="@Model.FaviconSrc" asp-for="FaviconSrc" />
        </div>

        <div class="d-flex flex-row gap-3">
            <label for="LinkLabel">Link Label</label>
            <input type="text" name="LinkLabel" id="LinkLabel" class="form-control" value="@Model.LinkLabel" asp-for="LinkLabel" />
        </div>

        <div class="d-flex flex-row gap-3">
            <label for="LinkHref">Link Href</label>
            <input type="text" name="LinkHref" id="LinkHref" class="form-control" value="@Model.LinkHref" asp-for="LinkHref" />
        </div>

        <div class="d-flex flex-row gap-3">
            <label for="IsPinned">Is Pinned</label>
            @* make this checkbox dynamically change the model IsPinned value on check or uncheck *@
            <input type="checkbox" name="IsPinned" id="IsPinned" class="" checked="@Model.IsPinned" asp-for="IsPinned" />
        </div>

        <div class="d-flex flex-row mx-auto gap-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        </div>
    </form>
